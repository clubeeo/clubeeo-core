  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Web Dev",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "web-dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/tmp/${input:envFile}"
    }
  ],
  "inputs": [
    {
      "id": "envFile",
      "type": "pickString",
      "description": "Select the environment file",
      "options": [".env", "stage.env", "tmp/prod.env"],
      "default": ".env"
    }
  ]
}