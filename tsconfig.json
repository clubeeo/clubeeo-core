{
   "compilerOptions": {
      "lib": [
         "es2019"
      ],
      "target": "es2019",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "declaration": true,  // Generate .d.ts files for type declarations
      "declarationDir": "./dist"
   },
   "exclude": ["tests", "node_modules", "dist", "tmp"]
}
